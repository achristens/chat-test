<h1>Log In</h1>
<%= form_tag sessions_path, :method => :post do %>
  <p class="field">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </p>
  <p class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag "Login" %>
  </p>
<% end %>
