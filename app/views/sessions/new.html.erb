<h1>Log In</h1>

<%= form_for :session, url: session_path do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field "Name:" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="submit">
    <%= f.submit "Sign In" %>
  </div>
  <% end %>
